<div class="col-sm-12">
	<form action="{{ route('donny5300.translations.groups.'~action, item.id) }}" method="post" class="form-horizontal">
		{{ csrf_field() }}
		<div class="form-group">
			<label for="" class="control-label col-sm-3">Title</label>
			<div class="col-sm-9">
				<input type="text" name="title" value="{{ old('title', item.title) }}" class="form-control">
			</div>
		</div>

		<div class="form-group">
			<label for="" class="control-label col-sm-3">Description</label>
			<div class="col-sm-9">
				<textarea name="description" id="" cols="30" rows="10" class="form-control">{{ old('description', item.description) }}</textarea>
			</div>
		</div>



		<div class="form-group">
			<label for="" class="control-label col-sm-3">Parent group</label>
			<div class="col-sm-9">
				<select name="group_id" id="" class="form-control">
					<option value="">None</option>
					{% for key,group in groups %}
						<option value="{{ key }}" {{ old('group_id', item.group_id) }}>{{ group }}</option>
					{% endfor %}
				</select>
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-9 col-sm-offset-3">
				<input type="submit" class="btn btn-success" value="Save">
			</div>
		</div>

	</form>
</div>