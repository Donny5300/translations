<table class="table table-responsive table-striped">
	<thead>
		<tr>
			<td>Title</td>
			<td>Group</td>
			<td>Group</td>
			<td class="text-right">Actions</td>
		</tr>
	</thead>

	<tbody>
		{% for name in names %}
			<tr>
				<td>{{ name.title }}</td>
				<td>{{ groups[name.group_id] }}</td>
				<td>
					<form action="{{ route('translations.languages.destroy', name.id) }}" method="post" class="btn-group pull-right">
						<a href="/system/translations/names/{{ name.id }}/edit" class="btn btn-info">Edit</a>
						{{ csrf_field() }}
						<input type="submit" value="Delete" class="btn btn-danger">
					</form>
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
