<form action="{{ route('translations.names.update', group.id) }}" method="post" class="form-horizontal">
	{{ csrf_field() }}
	<table class="table table-responsive table-striped">
		<thead>
			<tr>
				<td>Translation key</td>
				<td>Translation value</td>
			</tr>
		</thead>

		<tbody>
			{% for key,item in group.names %}
				<tr>
					<td><input type="text" name="title[{{ item.id }}]" class="form-control" value="{{ old('title.'~item.id, item.title) }}"></td>
					<td>
						<div class="row">
							<div class="col-sm-10">
							{% for value in item.values %}
								<div class="form-group">
									<label for="" class="control-label col-sm-4">
										{{ languages[value.language_id] }}
									</label>
									<div class="col-sm-8">
										<input type="text" name="values[{{ item.id }}][{{ value.language_id }}]" class="form-control" value="{{ value.title }}">
									</div>
								</div>
							{% endfor %}
							</div>
							<div class="col-sm-2">
								<span class="btn btn-success btn-md btn-block move-name">
									<i class="fa fa-arrows"></i>
									<i class="fa fa-pencil hidden"></i>
								</span>
							</div>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<div class="row">
		<div class="col-sm-12 clearfix">
			<input type="submit" class="btn btn-success pull-right" value="Save">
		</div>
	</div>

</form>

