<form action="{{ route('donny5300.translations.missing_translations') }}" method="post">
	{{ csrf_field() }}
	<table class="table table-responsive table-striped">
		<thead>
			<tr>
				<th><span class="select-all">Select all</span></th>
				<th>Title</th>
			</tr>
		</thead>
		<tbody>
			{% for item in translations %}
				<tr>
					<td>
						<input type="checkbox" name="keys[]" value="{{ item }}">
					</td>
					<td>{{ item }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<button class="btn btn-success btn-block">Save</button>
</form>

<style>
	.select-all
	{
		cursor: pointer;
		font-weight: bold;
	}
</style>